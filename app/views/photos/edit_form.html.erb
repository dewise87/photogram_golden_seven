<h1>Edit A Photo</h1>

<form action="http://localhost:3000/update_photo/:id">
  <div>
    <label>Caption:</label>
    <input type="text" name="caption" value="<%= @photo.caption %>">
  </div>

  <div>
    <label>Image URL:</label>
    <input type="text" name="source" value="<%= @photo.source %>">
  </div>

  <div>
    <button>Update Photo</button>
  </div>
</form>
